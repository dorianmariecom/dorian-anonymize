#!/usr/bin/env ruby
# frozen_string_literal: true

if ARGV[0] == "--help" || ARGV[0] == "-h"
  puts "USAGE: anonymize STRINGS..."
  puts "USAGE: ... | anonymize"
  exit
end

inputs = ARGV

if inputs.empty?
  inputs = $stdin.each_line.to_a
end

inputs.each do |input|
  puts input.to_s.gsub(/[0-9]/, "0").gsub(/[a-z]/, "a").gsub(/[A-Z]/, "A")
end
